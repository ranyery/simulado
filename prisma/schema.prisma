generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Users {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String

  role          String    @default("user")
  isActive      Boolean   @default(true)
  lastLoginDate DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now())

  @@map("users")
}

