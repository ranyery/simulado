generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum EUserRole {
  USER
  MODERATOR
  ADMIN
}

enum EUserStatus {
  ACTIVE
  PENDING_CONFIRMATION
  SUSPENDED
  BANNED
  CLOSED
}

// npx prisma migrate dev --name create-users => 24/09/2023 08:21:45
model User {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  roles     EUserRole[] @default([USER])
  status    EUserStatus @default(PENDING_CONFIRMATION)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now())

  @@map("users")
}

enum ECommonStatus {
  ACTIVE
  PENDING_REVIEW
  ARCHIVED
}

// npx prisma migrate dev --name create-subjects => 25/09/2023 19:08:21
model Subject {
  id          String        @id @default(cuid())
  name        String
  description String        @default("")
  status      ECommonStatus @default(PENDING_REVIEW)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())

  @@map("subjects")
}

// npx prisma migrate dev --name create-topics => 25/09/2023 22:56:34
model Topic {
  id          String        @id @default(cuid())
  name        String
  description String        @default("")
  status      ECommonStatus @default(PENDING_REVIEW)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  subjectId   String

  @@map("topics")
}

// npx prisma migrate dev --name create-institutes => 09/10/2023 03:53:16
model Institute {
  id        String        @id @default(cuid())
  acronym   String
  name      String        @default("")
  status    ECommonStatus @default(PENDING_REVIEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @default(now())

  @@map("institutes")
}

enum EQuestionDifficultyLevel {
  EASY
  MEDIUM
  HARD
}

enum EQuestionType {
  MULTIPLE_CHOICE
  TRUE_OR_FALSE
  FILL_IN_THE_BLANK
}

// npx prisma migrate dev --name create-questions => 26/09/2023 00:05:55
model Question {
  id              String                   @id @default(cuid())
  statement       String
  answerOptions   String                   @default("[]") // ! Json[] => Ainda não é suportado pelo Cockroachdb
  explanation     String                   @default("")
  difficultyLevel EQuestionDifficultyLevel @default(MEDIUM)
  type            EQuestionType            @default(MULTIPLE_CHOICE)
  status          ECommonStatus            @default(PENDING_REVIEW)
  year            Int                      @default(0)
  instituteId     String
  subjectId       String
  relatedTopicIds String[]                 @default([])
  createdAt       DateTime                 @default(now())
  updatedAt       DateTime                 @default(now())

  @@map("questions")
}

