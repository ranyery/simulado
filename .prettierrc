{
  "arrowParens": "always",
  "bracketSameLine": true,
  "endOfLine": "auto",
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "useTabs": false,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "proseWrap": "never"
      }
    },
    {
      "files": "*.{json,babelrc,eslintrc,remarkrc,prettierrc}",
      "options": {
        "useTabs": false
      }
    },
    {
      "files": ["app/**/*.scss", "app/**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
